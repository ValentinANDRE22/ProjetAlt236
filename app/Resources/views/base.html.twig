<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Alt236{% endblock %}</title> 
    <link rel="stylesheet" href="{{ asset('style/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('style/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('style/css/glyphicons.css') }}">
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    {% block stylesheets %}

    {% endblock %}
    <!-- <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" /> -->
    <link rel="icon" type="image/x-icon" href="{{ asset('images/LogoAlt236.png') }}" />
</head>
<body>
 <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ path('Sources_index') }}">
      <img src="{{ asset('images/LogoAlt236.png') }}" width="130" height="130" class="d-inline-block align-top" alt="Alt236">
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="{{ path('Sources_index') }}">News <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('Sources_videos') }}">Vidéos</a>
        </li>
        {% if app.user.username is defined %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('Admin_index') }}">Administration</a>
        </li>
        {% endif %}
    </ul>

    <div>
    {{ render(controller(
        'AdminBundle:SearchBar:search'
    )) }}
    </div>
</div>

<div>
    {% if app.user.username is defined %}
  {#   <span class="glyphicon glyphicon-user badge badge-outline-success" aria-hidden="true" style="text-transform: capitalize; padding: 1em;"> {{ app.user.username}}</span> #}
    <a href="{{ path('logout') }}" class="btn btn-outline-warning my-2 my-sm-0 glyphicon glyphicon-off"> {{ app.user.username}} </a>
{% else %}
    <a href="{{ path('login') }}" class="btn btn-outline-success my-2 my-sm-0">Connexion</a>
{% endif %}
</div>
</nav>
<div class="ligne-verte">
</div>

</body>
{% block body %}{% endblock %}

<br>
<br>
		{# Modal bootstrap #}
		<div id="modal-suppr" class="modal fade">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Êtes-vous sur de vouloir supprimer ?</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-footer">
						<a class="btn btn-primary  link-supp">Confirmer</a>
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
					</div>
				</div>
			</div>
		</div>
                
    {% block javascripts %}{% endblock %}
    </body>
    <footer class="footer">
        <div class="ligne-cian">
        </div>
        <div class="container">
            <span class="text-muted">© 2018 ALT236 ALL RIGHTS RESERVED</span>
        </div>
    </footer>
    </html>
