{% extends 'base.html.twig' %}

{% block body %}


        <div class="dashboard">
            <br>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-3">   <h2>Vidéos</h2></div>
                            <div class="offset-md-1 col-md-5"><button id="btn-formulaire-add-video" class="btn btn-secondary"> + Ajouter une vidéo</button></div>
                        </div>
                        <br>
                        <div id="formulaire-add-video" class="form-group formulaire-add-video">
                            <h2>Formulaire d'ajout d'une vidéo <button id="btn-close-formulaire-add-video" class="btn btn-secondary"> X </button></h2>
                            {{ form_start(formVideo) }}
                            {{ form_widget(formVideo.titre, { attr : { class: 'form-control', placeholder: 'Titre'}})  }}
                            {{ form_widget(formVideo.description, { attr : { class: 'form-control', placeholder: 'Description'}})  }}
                            {{ form_widget(formVideo.lienYoutube, { attr : { class: 'form-control', placeholder: 'Lien Youtube'}})  }}
                            {{ form_widget(formVideo.lienYoutubeFrame, { attr : { class: 'form-control', placeholder: 'Lien Integration'}})  }}
                            <br>
                            <div class="row">
                                <div class="offset-1 col-md-2">
                                 {{ form_label(formVideo.new) }} 
                                 {{ form_widget(formVideo.new, { attr : { class: 'form',}})  }}
                             </div>  
                             <div class="col-md-2">
                                 {{ form_label(formVideo.visible) }} 
                                 {{ form_widget(formVideo.visible, { attr : { class: 'form', }})  }}
                             </div> 
                             <div class="col-md-7">
                                 <button type="submit" class="btn btn-secondary btn-form">Ajouter</button>
                             </div> 
                         </div>
                         <br>
                         {{ form_end(formVideo) }}
                     </div>




                     <div class="row">
                         
                         {% for maVideo in listeVideos %}
                             <div class="col-md-4">
                            <div class="card" style="width: 18rem; height:85%;">
                              {# <img class="card-img-top" src="..." alt="Card image cap"> #}
                              <iframe width="100%" height="195px" src="{{ maVideo.lienYoutubeFrame }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                              <div class="card-body" style="height:100%;">
                                <h5 class="card-title card-title-me">{{ maVideo.titre }}</h5>
                                {# <p class="card-text">New Visible</p> #}
                                <a href="{{ path('Admin_video_board', {'id': maVideo.id}) }}" class="btn btn-secondary btn-miniature">Gestion de la vidéo</a>
                            </div>
                        </div>
                    </div>
                        {% endfor %}
        </div>

</div>
<div class="col-md-4">

</br>

<div class="sources">
    <!-- NavBar pour le scrollspy -->
    <nav id="navbar-example2" class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Musique</a>
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link" href="#musiquesbas" style="color:rgba(217, 216, 214, 0.94);">Bas de liste</a>
            </li>
        </ul>
    </nav>
    <!-- Affichage des sources dans un scrollspy -->
    <div data-spy="scroll" data-target="#navbar-example2" data-offset="0" class="musique-scroll">
        <table class="table table-striped head-source">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Artiste</th>
                    <th scope="col">Lien</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for musique in listeMusiques %}
                <tr>  
                    <th scope="row">{{ musique.titre }}</th>
                    <td>{{ musique.artiste }}</td>
                    <td><a href="{{ musique.lien }}">Écouter</a></td>
                    <td><a href="{{ path('Admin_musique_board', {'id': musique.id}) }}" class="glyphicon glyphicon-eye-open"></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div id="musiquesbas">
        </div>

    </div>

</div>
</br>

<button class="btn btn-secondary" id="btn-formulaire-add-musique"> + Ajouter une musique</button>
<div id="formulaire-add-musique" class="form-group formulaire-add-musique">
    <h2>Formulaire d'ajout d'une musique <button id="btn-close-formulaire-add-musique" class="btn btn-secondary"> X </button></h2>
    {{ form_start(formMusique) }}
    {{ form_widget(formMusique.titre, { attr : { class: 'form-control', placeholder: 'Titre'}})  }}
    {{ form_widget(formMusique.artiste, { attr : { class: 'form-control', placeholder: 'Artiste'}})  }}
    {{ form_widget(formMusique.duree, { attr : { class: 'form-control', placeholder: 'Durée'}})  }}
    {{ form_widget(formMusique.lien, { attr : { class: 'form-control', placeholder: 'Lien'}})  }}
    <button type="submit" class="btn btn-secondary btn-form">Ajouter</button><br>
{{ form_end(formMusique) }}
</div> 



</br>
<hr>

<div class="sources">
    <!-- NavBar pour le scrollspy -->
    <nav id="navbar-example2" class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Utilisateur</a>

    </nav>
    <!-- Affichage des sources dans un scrollspy -->
    <div data-spy="scroll" data-target="#navbar-example2" data-offset="0" class="user-scroll">
        <table class="table table-striped head-source">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Alt236</td>
                </tr>
                <tr>
                    <td>Valentin</td>
                </tr>
            </tbody>
        </table>

    </div>

</div>

</br>
<a class="btn btn-secondary" href="{{ path('register') }}">Ajouter un utilisateur</a>
</br>
</div>
</div>
</div>
</div>


{% endblock %}