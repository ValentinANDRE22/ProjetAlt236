{% extends 'base.html.twig' %}


{% block body %}



        <div class="dashboard">
            <div class="container-fluid">
                <div class='row'>
                    <div class="col-md-5">

                        <h2>{{ musique.titre }}</h2>
                        <br>

                        <div id="formulaire-edit-musique" class="form-group formulaire-add-musique">
                            {{ form_start(formMusique) }}
                            {{ form_widget(formMusique.titre, { attr : { class: 'form-control', placeholder: 'Titre'}})  }}
                            {{ form_widget(formMusique.artiste, { attr : { class: 'form-control', placeholder: 'Artiste'}})  }}
                            {{ form_widget(formMusique.duree, { attr : { class: 'form-control', placeholder: 'Durée'}})  }}
                            {{ form_widget(formMusique.lien, { attr : { class: 'form-control', placeholder: 'Lien'}})  }}
                            <button type="submit" class="btn btn-secondary btn-form">Modifier</button><br>
                            {{ form_end(formMusique) }}
                        </div>
                        <hr>
                        <a data-link="{{ path('Admin_suppr_musique', {id : musique.id}) }}" class="btn btn-warning btn-suppr-image" style="width: 100%;"><span class="glyphicon glyphicon-trash"></span> Supprimer la musique</a>
			
                    </div>
                    <div class="offset-1 col-md-5 offset-1">
                        <iframe title="exemple 1 avec iframe" src="{{ musique.lien }}" width="100%" height="100%">
                            <p>Votre navigateur ne supporte pas iframes.</p>
                        </iframe>
                        <br>
                    </div>
                </div>
                <br>
                <h3>Vidéo utilisant cette musique</h3>
                <hr>
                <div class="container-fluid">
                    <div class="row">

                        {% for maVideo in tableauMusique %}
                            
                            
                            <div class="col-md-4">
                                <div class="card" style="width: 18rem; height:85%;">
                                    {# <img class="card-img-top" src="..." alt="Card image cap"> #}
                                    <iframe width="100%" height="195px" src="{{ maVideo.video.lienYoutubeFrame }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                    <div class="card-body" style="height:100%;">
                                        <h5 class="card-title card-title-me">{{ maVideo.video.titre }}</h5>
                                        {# <p class="card-text">New Visible</p> #}
                                        <a href="{{ path('Admin_video_board', {'id': maVideo.video.id}) }}" class="btn btn-secondary btn-miniature">Gestion de la vidéo</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>


{% endblock %}